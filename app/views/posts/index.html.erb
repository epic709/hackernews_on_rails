<h2>All Posts</h2>

<% @posts.in_groups_of(3) do |group| %>
  <div class="row-md-4">
    <% group.compact.each do |post| %>
      <div class="col-md-4">
        <%= image_tag post.picture_url(:thumb) if post.picture?%>
        <h4><%= link_to post.url, post %></h4>
      </div>
    <% end %>
  </div>
<% end %>